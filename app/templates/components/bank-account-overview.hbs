<div class="card">
  <div class="bank-account-overview__header">
    <div class="bank-account-overview__account-name">
      <small>Account</small>
      <div class="h5">
        <BasicDropdown as |dd|>
          <dd.Trigger>Change Account <FaIcon @icon="caret-down"/></dd.Trigger>
          <dd.Content>
            <div {{action 'closeDropDown' dd}}>
              {{#each this.bankAccounts as |account|}}
                <LinkTo
                  @route="bank-accounts.view"
                  @model={{account.id}}
                  class="bank-account-overview__dropdown-link"
                >
                  {{account.name}}
                </LinkTo>
              {{/each}}
            </div>
          </dd.Content>
        </BasicDropdown>
      </div>
    </div>
    <div>
      <small>Balance</small>
      <p class="h2">${{this.balance}}</p>
    </div>
  </div>
  <div class="bank-account-overview__body">
    <p>
      <div class="h6">IBAN</div>
      <span>{{this.iban}}</span>
    </p>
    <p>
      <div class="h6">BIC</div>
      <span>{{this.iban}}</span>
    </p>
    <p>
      <div class="h6">SORT</div>
      <span>{{this.iban}}</span>
    </p>
  </div>
</div>
